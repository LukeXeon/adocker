#!/bin/bash
# Cross-compilation pkg-config wrapper
# Uses pkgconf from PATH (installed via pip in meson venv)
# Relies on PKG_CONFIG_PATH environment variable set by build scripts

if [ -n "$PKG_CONFIG_PATH" ] && command -v pkgconf >/dev/null 2>&1; then
    exec pkgconf "$@"
fi

# No PKG_CONFIG_PATH set or pkgconf not available, fail silently
exit 1
