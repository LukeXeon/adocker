<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Adocker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color - Docker blue -->
        <item name="colorPrimary">#0DB7ED</item>
        <item name="colorPrimaryContainer">#0DB7ED</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#066DA5</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.Adocker.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#0DB7ED</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.Adocker</item>
    </style>
</resources>
